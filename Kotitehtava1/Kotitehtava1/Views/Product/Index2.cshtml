@model IEnumerable<Kotitehtava1.Models.Tuotteet>


@{
    ViewBag.Title = "Index2";
}
@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".showProductId").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });

        $(function () {
            $("#poistaTuote").click(function () {
                var productId = $(this).data("productid");
                alert(productId);
            });
        });
    </script>
}

 <div class="container-fluid">

<h1>Tuotteet</h1>
<h2>Tuotteita @Model.Count() kpl</h2>

    <div class="row">

        @foreach (Kotitehtava1.Models.Tuotteet prod in Model)
        {

            <div class="col-lg-3">
                <div class="card mb-3">
                    <h3 class="card-header">@prod.Nimi</h3>
                    <div class="card-body">
                        <h5 class="card-title">@prod.Ahinta</h5>
                        <h6 class="card-subtitle text-muted">@prod.TuoteID</h6>
                    </div>
                    <img style="height: 200px; width: 100%; display: block;" src="@prod.ImageLink" alt="@prod.ImageLink">
                    <ul class="list-group list-group-flush">
                        @*<li class="list-group-item">@prod.UnitPrice</li>
