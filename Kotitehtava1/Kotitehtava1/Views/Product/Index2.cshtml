                        <li class="list-group-item">@prod.ReorderLevel</li>*@
                    </ul>
                    <div class="card-body">
                        <a href="/Tuotteets" class="card-link">Muokkaa tietoja</a>
                    </div>
                </div>
            </div>
        }
    </div>
