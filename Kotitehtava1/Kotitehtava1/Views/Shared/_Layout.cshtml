<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="./">Etusivu</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">Tietoja sovelluksesta</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Contact">Yhteystiedot</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Product/Index2">Tuotteiden selaus</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">Muokkaa tietoja</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 42px, 0px); top: 0px; left: 0px; will-change: transform;">
                        <a class="dropdown-item" href="/Asiakkaat">Asiakkaat</a>
                        <a class="dropdown-item" href="/Postitoimipaikats">Postitoimipaikat</a>
                        <a class="dropdown-item" href="/Tuotteets">Tuotteet</a>
                        <a class="dropdown-item" href="/Tilauksets">Tilaukset</a>
                        <a class="dropdown-item" href="/Tilausrivits">Tilausrivit</a>
                    </div>
                </li>
            </ul>
            <ul class="nav pull-right">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">@ViewBag.LoggedStatus</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 42px, 0px); top: 0px; left: 0px; will-change: transform;">
                        <a class="dropdown-item" href="/Home/Login">Kirjaudu</a>
                        <a class="dropdown-item" href="/Postitoimipaikats">Kirjaudu ulos</a>
                        <a class="dropdown-item" href="/Logins/Create">Luo tunnus</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Eetu Tolvanen</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
